        android:textSize="@dimen/landscape_button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_4"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vertical_guideline_1"
        app:layout_constraintTop_toBottomOf="@+id/button_multiplication" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/eight"
        android:textSize="@dimen/landscape_button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_4"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline_1"
        app:layout_constraintRight_toLeftOf="@+id/vertical_guideline_2"
        app:layout_constraintTop_toBottomOf="@+id/button_division" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/nine"
        android:textSize="@dimen/landscape_button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_4"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline_2"
        app:layout_constraintRight_toLeftOf="@+id/vertical_guideline_3"
        app:layout_constraintTop_toBottomOf="@+id/button_division" />

    <Button
        android:id="@+id/button_subtraction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:text="@string/subtraction"
        android:textSize="@dimen/landscape_button_text_size"
        app:layout_constraintBottom_toTopOf="@+id/horizontal_guideline_4"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_guideline_3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_open_bracket" />

    <Button
